@{
    ViewBag.Title = "Register";
}
@model RegisterDTOcs
<main class="container-fluid ms-auto w-75 mt-4">
<section class="card">
    <section class="card-header bg-success">
        <h1 class="text-center display-4 text-white">Register</h1>
    </section>
    <section class="card-body">
        <section>
            <h1 class="text-center display-5">Create new account</h1><hr />
        </section>
        <section>
                <form class="row g-3" asp-action="Register" asp-controller="Account" method="post">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control">
                </div>
                <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input type="email" asp-for="Email" class="form-control">
                </div>
                <div class="col-md-6">
                    <label  asp-for="Password" class="form-label">Password</label>
                        <input type="password" asp-for="Password" class="form-control">
                </div>
                <div class="col-md-6">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" asp-for="ConfirmPassword">
                </div>
                <div class="col-12">
                    <label asp-for="Address" class="form-label">Address</label>
                        <input type="text" class="form-control" asp-for="Address" placeholder="1234 Main St">
                </div>
                <div class="col-md-4">
                        <label for="inputState" class="form-label" asp-for="Country">Country</label>
                        <select id="inputState" class="form-select" asp-for="Country" asp-items=@ViewBag.Country>
                    </select>
                </div>
                <div class="col-md-4">
                        <label for="inputState1" class="form-label" asp-for="State">State</label>
                        <select id="inputState1" class="form-select" asp-for="State" asp-items=@ViewBag.State>
                    </select>
                </div>
                <div class="col-md-4">
                        <label for="inputCity" class="form-label" asp-for="City">City</label>
                        <input type="text" class="form-control" asp-for="City">
                </div>
                <div class="col-md-4">
                        <label for="inputZip" class="form-label" asp-for="Zip">Zip</label>
                        <input type="text" class="form-control" id="inputZip" asp-for="Zip">
                </div>
                <div class="col-md-8">
                        <label for="inputState3" class="form-label" asp-for="Role">Role</label>
                        <select id="inputState3" class="form-select" asp-for="Role" asp-items=@ViewBag.Role>
                    </select>
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-success" type="submit">Create</button>
                </div>
            </form>
        </section>
    </section>
</section>
</main>